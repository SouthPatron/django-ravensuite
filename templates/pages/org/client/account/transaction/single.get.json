{% load sourcedoc %}
{% get_document_obj instance.source_document as sdo %}
{
	"refnum" : {{ instance.refnum }},
	"creation_time" : "{{ instance.creation_time|date:'r' }}",
	"event_time" : "{{ instance.event_time|date:'r' }}",
	"group" : "{{ instance.group|escapejs }}",
	"description" : "{{ instance.description|escapejs }}",
	"balance_before" : {{ instance.balance_before }},
	"balance_after" : {{ instance.balance_after }},
	"amount" : {{ instance.amount }},

	"source_document" : {
		"document_type" : "{{ sdo.getObj.get_document_type_display }}",
		"document_state" : "{{ sdo.getObj.get_document_state_display }}"
	}
}


